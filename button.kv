ScreenManagement:
    MenuScreen:
    SubmenuScreen:
    FreemodeGameScreen:
    OntimeGameScreen:
    OnpressGameScreen:
    StatiscticScreen:
    CollectionScreen:

<Label>:
    font_name: 'Roboto'
    font_size: 55
    markup: True
    color:  [1, 1, 1, 1]

<MenuButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold: True
    background_normal: 'menu_button_UP.png'
    background_down: 'menu_button_DOWN.png'
    border: (30, 30, 30, 30)



<MenuScreen>:
    name: 'MenuScreen'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: title
            text: '      Please\nchoose mode'
            color:  0, 0, 0, 1
            bold: True
            multiline: True


        BoxLayout:
            height: 400
            orientation: 'vertical'
            padding: 80
            spacing: 20
            size_hint: (1, None)

            MenuButton:
                id: start_stop
                text: 'Play'
                on_press: app.submenu()
                
            MenuButton:
                id: reset
                text: 'Statisctic'
                on_press: app.statistic()
                background_normal: 'menu_button_UP.png'
                background_down: 'menu_button_DOWN.png'

            MenuButton:
                id: reset
                text: 'Collection'
                on_press: app.collection()
                background_normal: 'menu_button_UP.png'
                background_down: 'menu_button_DOWN.png'




<SubmenuScreen>:
    name: 'SubmenuScreen'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: ontime
            text: 'SubmenuScreen'
            color:  0, 0, 0, 1
            bold: True
        BoxLayout:
            height: 400
            orientation: 'vertical'
            padding: 80
            spacing: 20
            size_hint: (1, None)    
            MenuButton:
                text:'On time'
                on_press: app.ontimeplay()
                on_press: app.start_stop()
            MenuButton:
                text:'On press'
                on_press: app.onpressplay()
            MenuButton:
                text:'Free mode'
                on_press: app.fremodegame()
            MenuButton:
                text:'Back'
                on_press: app.back()


